@{
    ViewData["Title"] = "Mission Control";
}
@section Scripts {
    <script src="~/js/home.js" asp-append-version="false"></script>
}

<div id="home" v-cloak>

    <h1>Mission Control</h1>
    <p>Plan rover missions from here. When all rover paths have been created, launch the mission to Mars</p>
    <hr>

    <h3>Mars Destination</h3>
    <p>Dimensions of the Mars destination plateau to investigate.</p>
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Width</span>
                </div>
                <input type="number" class="form-control" v-model="grid.widthInput" v-on:input="updateGridInput" min="0" v-bind:max="grid.maxDimension">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Height</span>
                </div>
                <input type="number" class="form-control" v-model="grid.heightInput" v-on:input="updateGridInput" min="0" v-bind:max="grid.maxDimension">
            </div>
        </div>
    </div>

    <!-- controls row START-->
    <div class="row">

        <div class="col-lg-6">
            <h3>Rover Control</h3>
            <div class="row">
                <div class="col-lg-12">
                    <p>Starting coordinates</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">x</span>
                        </div>
                        <input type="number" class="form-control" v-model="rover.startX" v-on:input="updateRover" min="0">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">y</span>
                        </div>
                        <input type="number" class="form-control" v-model="rover.startY" v-on:input="updateRover" min="0">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p>Input instructions</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <h3>Rover Path</h3>
            <table class="grid-input table table-bordered" align="left" v-bind:style="{ width: grid.widthPx + 'px' }">
                <tbody>
                    <tr v-for="(h, y) in grid.height">
                        <td v-for="(w, x) in grid.width">
                            <img v-show="isRoverCell(x, y)" src="https://visualpharm.com/assets/218/Small Robot-595b40b85ba036ed117dc489.svg" alt="R" class="rover" >
                            <div v-show="!isRoverCell(x, y)" class="rover"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <!-- controls row END-->


</div>
